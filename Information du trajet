pipeline {
    agent any
    parameters {
        choice(name: 'PEAGES', choices: ['OUI', 'NON'], description: 'Voulez-vous des péages sur le trajet?')
        choice(name: 'DONNEES_GOOGLE', choices: ['OUI', 'NON'], description: 'Voulez-vous que vos données GPS soient utiliser par google pour ameliorer les trajets future?')
    }
    stages {
        stage('Printing trip information') {
            steps {
                script {
                    echo "Choix du péages : ${params.PEAGES}"
                    echo "Choix de l'accès des données GPS et du trafic routier: ${params.DONNEES_GOOGLE}"
                }
            }
        }
        stage('Build') {
            steps {
                script {
                    echo "Build"
                    echo "Compiling: US - accès données et trafic routier Google"
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    echo "Test"
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    echo "Envoi des données GPS a google"
                    echo "Deploy"
                }
            }
        }
    }
}
