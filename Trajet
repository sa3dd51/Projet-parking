pipeline {
    agent any
    parameters {
        choice(name: 'NATIONALE', choices: ['OUI', 'NON'], description: 'Voulez-vous passer par une route nationale?')
        choice(name: 'AUTOROUTE', choices: ['OUI', 'NON'], description: 'Voulez-vous passer par une autoroute?')
        choice(name: 'DEPARTEMENTALE', choices: ['OUI', 'NON'], description: 'Voulez-vous passer par une route départementale?')
    }
    stages {
        stage('Printing trip information') {
            steps {
                script {
                    echo "Choix du péages : ${params.NATIONALE}"
                    echo "Choix des stations essences : ${params.AUTOROUTE}"
                    echo "Choix de l'accès des données GPS et du trafic routier: ${params.DEPARTEMENTALE}"
                }
            }
        }
        stage('Build') {
            steps {
                script {
                    echo "Build"
                    echo "Compiling US - Route"
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    echo "Test"
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    echo "Deploy"
                }
            }
        }
    }
}
